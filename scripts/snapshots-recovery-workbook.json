                        "jsonData": "[\r\n    { \"value\":\"Restore Completed\", \"label\": \"Restore Completed\"},\r\n    { \"value\":\"Restore Failed\", \"label\": \"Restore Failed\"}\r\n]",
                        "timeContext": {
                          "durationMs": 86400000
